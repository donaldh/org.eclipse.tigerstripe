<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.eclipse.tigerstripe</groupId>
	<artifactId>org.eclipse.tigerstripe.parent</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>o.e.t/pom.xml</name>
	<properties>
		<tycho-version>0.9.0</tycho-version>
	</properties>
	<modules>
		<!-- features -->
		<module>features/org.eclipse.tigerstripe.annotation.feature</module>
		<module>features/org.eclipse.tigerstripe.base</module>
		<module>features/org.eclipse.tigerstripe.workbench</module>
		<!-- plugins -->
		<module>plugins/org.eclipse.tigerstripe.espace.core</module>
		<module>plugins/org.eclipse.tigerstripe.espace.resources</module>
		<module>plugins/org.eclipse.tigerstripe.espace.resources.monitor</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.core</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.resource</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.ui</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.resource.ui</module>
		<module>plugins/org.eclipse.tigerstripe.metamodel</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.base</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.ts2project.router</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.tsmodel</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.headless</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.help</module>
		<module>plugins/org.eclipse.tigerstripe.repository.core</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.ui.visualeditor.adaptation</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.ui.base</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.ui.visualeditor</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.ui.visualeditor.diagram</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.ui.visualeditor.edit</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.branding</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.optional.bulkImport</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.optional.UML2Export</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.ui.instancediagram</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.ui.instancediagram.adaptation</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.ui.instancediagram.diagram</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.ui.instancediagram.edit</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.ui.diagramrendering</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.ui.UML2Import</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.tsmodel.ui</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.example.person.validators</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.example.person</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.example.router</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.example</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.java.ui.refactoring</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.java.ui</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.java</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.resource.ui.refactoring</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.ui.example.customView</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.validation</module>
		<module>plugins/org.eclipse.tigerstripe.releng</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.ui.sdk</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.optional.buckminster</module>
		<!-- test plugins -->
		<module>plugins/org.eclipse.tigerstripe.test_common</module>
		<module>plugins/org.eclipse.tigerstripe.metamodel.test</module>
		<module>plugins/org.eclipse.tigerstripe.annotation.core.test</module>
		<module>plugins/org.eclipse.tigerstripe.repository.core.test</module>
		<module>plugins/org.eclipse.tigerstripe.workbench.base.test</module>
	
		<!-- ui test plugins 
		<module>releng/org.eclipse.tigerstripe.rcp</module>
		<module>tests/org.eclipse.tigerstripe.ui.tests</module>
		-->
		<!-- releng -->
		<module>releng/org.eclipse.tigerstripe.update-site</module>
	</modules>
	<repositories>
		<repository>
			<id>helios</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/releases/helios/</url>
		</repository>
	</repositories>
	<!-- Location of Q7 maven plugins -->
	<pluginRepositories>
		<pluginRepository>
			<id>xored</id>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<name>Xored snapshots</name>
			<url>http://maven.xored.com/nexus/content/repositories/snapshots/</url>
		</pluginRepository>
	</pluginRepositories>
	<build>
		<resources>
			<resource>
				<directory>${basedir}/src/java</directory>
				<includes>
					<include>**/*.vm</include>
					<include>**/*.properties</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.sonatype.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.sonatype.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<resolver>p2</resolver>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.sonatype.tycho</groupId>
				<artifactId>maven-osgi-compiler-plugin</artifactId>
				<version>${tycho-version}</version>
			</plugin>
			<plugin>
				<groupId>org.sonatype.tycho</groupId>
				<artifactId>maven-osgi-packaging-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<strictVersions>false</strictVersions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
