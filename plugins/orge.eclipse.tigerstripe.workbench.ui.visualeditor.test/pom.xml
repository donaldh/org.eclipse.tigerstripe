<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.eclipse.tigerstripe</groupId>
    <artifactId>org.eclipse.tigerstripe.plugins.parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>

  <artifactId>org.eclipse.tigerstripe.workbench.ui.visualeditor.test</artifactId>
  <packaging>eclipse-test-plugin</packaging>
  <name>plugins/orge.e.t.workbench.ui.visualeditor.test</name>

<properties>

	<!-- Not clear how to handle this ${eclipse-home} -->
	<!-- The property ${eclipse-home} should be passed into this script -->
	<!-- Set a meaningful default value for when it is not. -->

    <!-- Trying out this one: -->
    <eclipse-home>${project.build.directory}/work/tigerstripe</eclipse-home>
    
    <plugin-name>org.eclipse.tigerstripe.workbench.ui.visualeditor.test</plugin-name>
    <library-file>${eclipse-home}/plugins/org.eclipse.test_3.2.0/library.xml</library-file>
    
	<org.eclipse.tigerstripe.workbench.ui.base-folder>${eclipse-home}/org.eclipse.tigerstripe.workbench.ui.base</org.eclipse.tigerstripe.workbench.ui.base-folder>
    
    <data-dir>${org.eclipse.tigerstripe.workbench.ui.base-folder}</data-dir>
    
    <!-- Bundle-SymbolicName -->
    <testSuite>org.eclipse.tigerstripe.workbench.ui.visualeditor.test</testSuite>
    
    <!-- name of test suite class -->
    <testClass>org.eclipse.tigerstripe.workbench.ui.visualeditor.test.suite.DiagramTestsuite</testClass>
    
    <!--  vm argument -->
    <testArgLine>-Xmx512m -XX:MaxPermSize=128m</testArgLine>
    
  </properties>


</project>
