------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Entry-Name: .content
Content-Type: text/ecl

get-view "Tigerstripe Explorer" | get-tree | select "Project/src/com.mycompany/Entity" | double-click
with [get-editor Entity | get-section Attributes | get-section] {
    get-table | select attribute0
    get-button Remove | click
}
with [get-window "Remove attribute"] {
    get-button "Don\'t remind me again" | click
    get-button Yes | click
}
with [get-editor Entity] {
    with [get-section Attributes | get-section] {
        get-table | select attribute1
        get-button Remove | click
    }
    with [get-section Constants] {
        click
        with [get-section] {
            get-table | select "literal0=\"0\""
            get-button Remove | click
        }
    }
    with [get-section Methods] {
        click
        with [get-section] {
            get-table | select "method0\\(\\):void"
            get-button Remove | click
        }
    }
}
get-button "Save \(.*\)" | click
get-view "Tigerstripe Explorer" | get-tree | get-item "Project/src/com.mycompany/Entity" | get-property childCount 
    | equals 11 | verify-true
get-preferences-menu | click 
get-window Preferences | get-tree | select "Tigerstripe/General"
with [get-window Preferences | get-group "Asking Preferences" 
    | get-button "Don\'t Remind About Removing fields/methods/constants"] {
    get-property enablement | equals true | verify-true
    get-property selected | equals true | verify-true
}
